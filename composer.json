{
    "name": "arnedesmedt/php-specification",
    "description": "A PHP specification library.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Arne De Smedt",
            "email": "arnedesmdt@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.5",
        "squizlabs/php_codesniffer": "^3.5",
        "phpro/grumphp": "^1.1",
        "doctrine/coding-standard": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "ADS\\Specification\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        }
    }
}
